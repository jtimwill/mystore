<%= render 'shared/content_title', title: 'Sign In' %>

<div class='well col-md-4 col-md-offset-3'>
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :username, "Username" %>
      <%= text_field_tag :username, params[:username] || '', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, params[:password] || '', class: "form-control" %>
    </div>
    <%= submit_tag "Login", class: "btn btn-default" %>
  <% end %>
</div>

<div class= 'well col-md-4 col-md-offset-3'>
    <div class="text-center">
      <%= link_to 'Facebook', '/auth/facebook', class: "btn btn-primary" %>
      <%= link_to 'Google+', '/auth/google', class: "btn btn-danger" %>
    </div>
</div>
