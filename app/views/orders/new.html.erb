<%= javascript_include_tag "cart" %>
<section class="cart container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <article>
        <header>
          <h2>Review Your Order</h2>
        </header>
        <%= form_for @order do |f| %>
          <table class="table">
            <thead>
              <tr>
                <th style="width:10%"></th>
                <th style="width:30%"></th>
                <th style="width:10%"> Price</th>
                <th style="width:20%"> Quantity</th>
              </tr>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
                <tr>
                  <td><%= image_tag(cart_item.product.small_image_path, width: "100") %></td>
                  <td><%= link_to cart_item.product.title, cart_item.product %></td>
                  <td><%= dollars(cart_item.product.price) %></td>
                  <td><%= cart_item.quantity %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <div class="form-group">
          <label class="control-label">Choose a delivery option:</label>
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios1" value='1', onclick="update_shipping(0)">
                <%= @free_shipping.title %>
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios2" value='2', checked="checked", onclick="update_shipping(7.99)"}>
                <%= @standard_shipping.title %>
              </label>
            </div>
          </label>
        <div>
          </br>

          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th style="width:10%">Order Summary ($)</th>
                <th style="width:30%"></th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= "Items (#{current_user.items_in_cart}):"%></td>
                <td id="subtotal-cost"><%= current_user.cart_total.to_f/100 %></td>
              </tr>
              <tr>
                <td>Shipping and handling:</td>
                <td id="shipping-cost"><%= @standard_shipping.cost.to_f/100 %></td>
              </tr>
              <tr>
                <td>Estimated tax to be collected:</td>
                <td>0.00</td>
              </tr>
              <tr class="success">
                <td>Order total:</td>
                <td id="total-cost"><%= (current_user.cart_total + @standard_shipping.cost).to_f/100 %></td>
              </tr>
            </tbody>
          </table>
            <div class="actions">
              <script
                src="https://checkout.stripe.com/checkout.js"
                class="stripe-button"
                data-key="pk_test_tIugFx7quSrIWbtO37JQY96l"
                data-image="/img/documentation/checkout/marketplace.png"
                data-name="Demo Site"
                data-email=<%="#{current_user.email}"%>
                data-description="Test Card: 4242424242424242"
                data-locale="auto">
              </script>
            </div>
          </div>
        <% end %>
      </article>
    </div>
  </div>
</section>
</br>
</br>
</br>
