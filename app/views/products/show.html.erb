<%= render 'shared/content_title', title: 'Product Details' %>

<article class="product">
  <div class="container">
    <div class="row">
      <div class="product_large_cover col-sm-7 col-sm-offset-1">
        <%= image_tag @product.large_image_path %>
      </div>
      <div class="product_info col-sm-3">
        <header>
          <h3>
            <%= @product.title %>
          </h3>
          <span>Rating: </span>
          <%= @product.rating %>
        </header>
        <p>
          <%= @product.description %>
        </p>
        <div class="actions">
          <%= form_tag cart_items_path do %>
            <%= label_tag :quantity, "Quantity" %>
            <%= select_tag :quantity, options_for_select((1..9), selected: 1) %>
            <%= hidden_field_tag(:product_id, @product.id) %>
            <%= submit_tag "Add to Cart", class: 'btn btn-primary' %>
          <% end %>
        </br>

          <% if current_user.admin? %>
            <%= link_to "Delete Product", admin_product_path(product_id: @product.id), method: :delete, class: 'btn btn-danger'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</article>
  <section class="reviews container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <%= form_for [@product, Review.new] do |f| %>
          <fieldset>
            <div class="form-group">
              <label>Rate this product</label>
              <div class="row">
                <div class="col-sm-3">
                  <%= f.select :rating, options_for_product_reviews %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label>Write Review</label>
              <div class="row">
                <div class="col-sm-8">
                  <%= f.text_area :content, rows: 6, class: "form-control" %>
                </div>
              </div>
            </div>
          </fieldset>
          <fieldset class="form-group actions clearfix">
            <%= submit_tag "Submit", class: 'btn btn-primary' %>
            <%= link_to "Cancel", @product %>
          </fieldset>
        <% end %>
        <header>
          <h3>User Reviews <%= "(#{@reviews.count})" %></h3>
        </header>
        <ul>
          <% @reviews.each do |review| %>
            <article class="review">
              <li class="row">
                <div class="span2">
                  <span>Rating: <%= "#{review.rating}" %></span>
                  <p>
                    by
                    <%= link_to review.user.username, review.user %>
                  </p>
                </div>
                <div class="span8">
                  <p>
                    <%= review.content %>
                  </p>
                </div>
              </li>
            </article>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
