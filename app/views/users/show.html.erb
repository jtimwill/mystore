<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
    <dt>Quizzes taken:</dt>
    <dd><%= @user.quizzes.count %></dd>    
  </dt>
</div>

<h5><%= @user.username %>'s Top Scores</h5>
  <% @user.quizzes.each do |user_quiz| %>
    <div class=' btn btn-default btn-lg btn-block'>
      <p>
          Quiz Category: <%= user_quiz.category %>
      </br>
          Score: <%= user_quiz.score %>
      </br>
          Date: <%= display_datetime(user_quiz.created_at) %>
    </div>
  <% end %>

  