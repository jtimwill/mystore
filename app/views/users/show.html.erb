<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
    <dt>Purchases Made:</dt>
    <dd><%= @user.products.count %></dd>
    <dt>Reviews Written:</dt>
    <dd><%= @user.reviews.count %></dd>
  </dt>
</div>

<h5><%= @user.username %>'s Activity</h5>

<ul class="nav nav-tabs">
  <li class=""><a href="#orders" data-toggle="tab" aria-expanded="false">Orders</a></li>
  <li class="active"><a href="#reviews" data-toggle="tab" aria-expanded="true">Reviews</a></li>
</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade" id="orders">
    <p>

    </p>
  </div>
  <div class="tab-pane fade active in" id="reviews">
    <p>
      <section class="user_reviews container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <header>
              <h3><%= "#{@user.username}'s Reviews (#{@user.reviews.count})" %></h3>
            </header>
            <ul>
              <% @user.reviews.each do |review| %>
                <article class="review">
                  <li class="row">
                    <div class="col-sm-2">
                      <p>
                        <%= link_to review.product.title, review.product %>
                      </p>
                      <col><%= "Rating: #{review.rating}/5" %></col>
                    </div>
                    <div class="col-sm-8">
                      <p>
                        <%= review.content %>
                      </p>
                    </div>
                    <%= link_to "Delete Review", product_review_path(product_id: review.product, id: review.id), method: :delete, class: 'btn btn-default'%>
                  </li>
                </article>
              <% end %>
            </ul>
          </div>
        </div>
      </section>
    </p>
  </div>
</div>
