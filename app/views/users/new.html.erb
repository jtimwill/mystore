<%= render 'shared/content_title', title: 'Register' %>

<div class='well col-md-4 col-md-offset-3'>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', obj: @user %>
    <div class='form-group'>
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <%= f.submit ("Register"), class: 'btn btn-default' %>
  <% end %>
</div>

<div class= 'well col-md-4 col-md-offset-3'>
    <div class="text-center">
      <%= link_to 'Facebook', '/auth/facebook', class: "btn btn-primary" %>
      <%= link_to 'Google+', '/auth/google', class: "btn btn-danger" %>
    </div>
</div>
